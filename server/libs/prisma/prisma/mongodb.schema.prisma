generator client {
  provider = "prisma-client-js"
  output   = "./generated/mongodb"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_DATABASE_URL")
}

type Panel {
  panelId   String
  likes     String[]
  questions String[]
}

model ToquizUser {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?
  panels    Panel[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
